<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="La creación de Adám"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="324dp"
        android:layout_height="262dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/creacionadan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/description"
        android:layout_width="342dp"
        android:layout_height="194dp"
        android:layout_marginTop="20dp"
        android:text="La Creación de Adán (Creazione di Adamo)es una pintura renacentista de Miguel Ángel que data del año 1511. Dios es representado como un anciano, con barba, envuelto en una alborotada túnica color púrpura, la cual comparte con unos querubines. El brazo derecho de Dios se encuentra estirado, para impartir la chispa de vida de su propio dedo al de Adán, cuyo brazo izquierdo se encuentra en idéntica posición al de Dios."
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description">

        <Button
            android:id="@+id/play_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/ic_play"
            android:drawablePadding="8dp"
            android:text="Play" />

        <Button
            android:id="@+id/pause_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/ic_pause"
            android:drawablePadding="8dp"
            android:text="Pause" />

        <Button
            android:id="@+id/resume_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/ic_notification"
            android:drawablePadding="8dp"
            android:text="Resume" />

        <Button
            android:id="@+id/stop_button"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_stop"
            android:drawablePadding="8dp"
            android:text="Stop" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
